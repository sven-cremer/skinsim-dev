<launch>

  <!-- these are the arguments you can pass this launch file, for example paused:=true -->
  <arg name="load_jointfile_path" default="true"/>

  <rosparam file="$(find skin_model)/config/config.yaml" command="load" />
 
   <!-- set load_jointfile_path flag -->
  <group if="$(arg load_jointfile_path)">
    <param name="file_name"  value="$(find skin_model)/config/joint_names.yaml" />
    <param name="datafile_name"  value="$(find skin_model)/data/data" />
  </group>
 
  <!-- Launch empty world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg   name="world_name" value="$(find skin_model)/worlds/fixed_skin_model.world"/>
  </include>
  
</launch>